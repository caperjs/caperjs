<script src="/app/templates/carousel/carousel.js"></script>
<header data-template="carousel" class="carousel slide container-fluid" data-ride="carousel">
    <script data-script="carousel" type="text/x-handlebars-template">
      <!-- Indicators -->
      <ol class="carousel-indicators">
        {{#each this.carousel.images}}
        <li data-target="[data-template='carousel']" data-slide-to="{{@index}}" {{#if @first}}class="active"{{/if}}></li>
        {{/each}}
      </ol>
    
      <!-- Wrapper for slides -->
      <section class="carousel-inner" role="listbox" style="height: 300px;">
        {{#each this.carousel.images}}
        <figure class="item {{#if @first}}active{{/if}}">
          <img src="{{image}}" style="margin: auto;">
          <figcaption>{{caption}}</figcaption>
        </figure>
        {{/each}}
      </section>
    
      <!-- Left and right controls -->
      <a class="left carousel-control" href="[data-template='carousel']" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="[data-template='carousel']" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </script>
</header>