<script src="/app/templates/feed/feed.js"></script>
<link href="/app/styles/min/feed.css" rel="stylesheet">
<div data-template="feed" class="container">
    <script data-script="feed" type="text/x-handlebars-template">
    {{#each this.feed}}
    <section class="row">
        {{#each articles}}
        <article class="col-sm-12">
            <h2 class="padding-sides">{{title}}</h2>
            {{#each images}}
            <figure class="col-sm-6">
                <img src="{{image}}" style="max-width: 100%;">
                {{#if caption}}<figcaption>{{caption}}</figcaption>{{/if}}
            </figure>
            {{/each}}
            <p class="padding-sides">
                {{description}}
            </p>
        </article>
        {{/each}}
    </section>
    {{/each}}
    </script>
</div>